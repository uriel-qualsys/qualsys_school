<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="qualsys_courses_view_form" model="ir.ui.view">
            <field name="name">qualsys.courses.view.form</field>
            <field name="model">qualsys.courses</field>
            <field name="arch" type="xml">
                <form string="Cursos Qualsys">
                    <header>
                        <group>
                            <h3>Cursos Qualsys</h3>
                        </group>
                    </header>
                    <sheet>
                        <group>
                            <field name="code" />
                            <field name="name" />
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="duration" />
                        </group>
                        <notebook>
                            <page string="Alumnos">
                                <field name="attendees_ids">
                                    <tree editable="bottom">
                                        <field name="partner_id"/>
                                        <field name="age"/>
                                    </tree>
                                </field>                              
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="qualsys_courses_view_tree" model="ir.ui.view">
            <field name="name">qualsys.courses.view.tree</field>
            <field name="model">qualsys.courses</field>
            <field name="arch" type="xml">
                <tree string="Cursos Qualsys">                       
                    <field name="name" />
                    <field name="code" />
                    <field name="school_id" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="duration" />
                    <field name="attendees_number" />
                </tree>
            </field>
        </record>

        <act_window id="qualsys_courses_action" name="Curso Qualsys" res_model="qualsys.courses" view_mode="tree,form"/>   
        <menuitem id="qualsys_courses_menu" name="Cursos" action="qualsys_courses_action" parent="qualsys_school_root"/>
    </data>
</odoo>
